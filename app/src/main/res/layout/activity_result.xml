<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">
    
    <TextView
        android:textColor="@color/teal_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Your BMI is: "
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textview_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:text="27.104"
        android:textAlignment="center"
        android:textSize="38sp"/>
    
    <TextView
        android:textColor="@color/teal_200"
        android:id="@+id/textview_classification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        tools:text="Classification: Underweight"
        android:textAlignment="center"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TAKE A LOOK AT THE TABLE BELOW:"
        android:layout_marginTop="25dp"
        android:textColor="@color/teal_200"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="- UNDER 18.5 - UNDERWEIGHT"
        android:layout_marginTop="10dp"
        android:textColor="@color/teal_200"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="- BETWEEN 18.5 and 24.9 - NORMAL WEIGHT"
        android:textColor="@color/teal_200"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="- BETWEEN 25.0 and 29.9 - OVERWEIGHT"
        android:textColor="@color/teal_200"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="- BETWEEN 30.0 and 39.9 - OBESITY"
        android:textColor="@color/teal_200"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="- OVER 40.0 - SEVERE OBESITY"
        android:textColor="@color/teal_200"/>

</LinearLayout>